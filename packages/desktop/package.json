{
  "name": "@tryfridayai/desktop",
  "version": "0.1.0",
  "description": "Friday AI Desktop â€” Electron desktop client powered by friday-runtime",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5188 && electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "friday-runtime": "^0.2.0",
    "keytar": "^7.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.0",
    "framer-motion": "^12.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "ai.tryfriday.desktop",
    "productName": "Friday AI",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/node_modules"
    ],
    "extraResources": [
      {
        "from": "../runtime",
        "to": "runtime",
        "filter": ["**/*", "!node_modules/.cache/**"]
      }
    ]
  }
}
